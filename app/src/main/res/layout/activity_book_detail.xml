<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fragBookDetail_imgBookCover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_220dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/fragBookDetail_imgBack"
                android:layout_width="@dimen/_32dp"
                android:layout_height="@dimen/_32dp"
                android:src="@drawable/ic_arrow_back" />
        </FrameLayout>

        <TextView
            android:id="@+id/fragBookDetail_tvBookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_large" />

        <com.jude.easyrecyclerview.EasyRecyclerView
            android:id="@+id/fragBookDetail_rvImageDemo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />

        <com.dd.CircularProgressButton
            android:id="@+id/btnWithText"
            android:layout_width="196dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:textColor="#FFFF"
            android:textSize="18sp"
            app:cpb_textComplete="Complete"
            app:cpb_textError="Error"
            app:cpb_textIdle="Upload"
            app:cpb_selectorIdle="@drawable/selector_idle_state"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>